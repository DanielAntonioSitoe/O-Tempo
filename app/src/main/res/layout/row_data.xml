<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/listviewdata"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imagem"
            android:layout_width="91dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="120dp"
            android:layout_marginRight="140dp"
            android:src="@drawable/cloudy"></ImageView>

        <TextView
            android:id="@+id/tempMin"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="67dp"
            android:layout_marginEnd="-211dp"
            android:layout_marginRight="-211dp"
            android:layout_toStartOf="@+id/imagem"
            android:layout_toLeftOf="@+id/imagem"
            android:text="84°"
            android:textColor="#004570"
            android:textSize="24dp"></TextView>

        <TextView
            android:id="@+id/max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="-167dp"
            android:layout_marginRight="-167dp"
            android:layout_toStartOf="@+id/imagem"
            android:layout_toLeftOf="@+id/imagem"
            android:text="Max"
            android:textColor="#004570"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="-166dp"
            android:layout_marginRight="-166dp"
            android:layout_toStartOf="@+id/imagem"
            android:layout_toLeftOf="@+id/imagem"
            android:text="Min"
            android:textColor="#004570"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/tempMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="-209dp"
            android:layout_marginRight="-209dp"
            android:layout_toStartOf="@+id/imagem"
            android:layout_toLeftOf="@+id/imagem"
            android:text="84°"
            android:textColor="#D81B60"
            android:textSize="24dp"></TextView>

        <TextView
            android:id="@+id/estado"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="-120dp"
            android:layout_marginRight="-120dp"
            android:layout_toStartOf="@+id/imagem"
            android:layout_toLeftOf="@+id/imagem"
            android:text="nublado"
            android:textAlignment="center"
            android:textColor="#004570"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/tempAtual"
            android:layout_width="127dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_toStartOf="@+id/imagem"
            android:layout_toLeftOf="@+id/imagem"
            android:text="84°C"
            android:textColor="#004570"
            android:textSize="40dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/nomeCidade"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_toStartOf="@+id/imagem"
            android:layout_toLeftOf="@+id/imagem"
            android:text="nublado"
            android:textAlignment="center"
            android:textColor="#004570"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>
</RelativeLayout>